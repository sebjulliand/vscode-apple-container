{
  "name": "vscode-apple-container",
  "publisher": "sebjulliand",
  "displayName": "Apple Container",
  "description": "Manage Apple Container from VS Code",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebjulliand/vscode-apple-container"
  },
  "author": {
    "name": "SÃ©bastien Julliand",
    "url": "https://github.com/sebjulliand"
  },
  "engines": {
    "vscode": "^1.103.x"
  },
  "extensionDependencies": [],
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "apple-container.startService",
        "title": "%start.service%",
				"icon": "$(debug-start)",
        "category": "Apple Container"
      },
      {
        "command": "apple-container.stopService",
        "title": "%stop.service%",
				"icon": "$(debug-stop)",
        "category": "Apple Container"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "apple-container.startService",
          "when": "never"
        },
        {
          "command": "apple-container.stopService",
          "when": "never"
        }
      ],
      "view/item/context": [
        {
          "command": "apple-container.startService",
          "when": "view === apple-container.system && viewItem === apple-container.statusNode.stopped",
          "group": "inline"
        },
        {
          "command": "apple-container.stopService",
          "when": "view === apple-container.system && viewItem === apple-container.statusNode.running",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "icons/mac-dock.svg",
          "id": "apple-container",
          "title": "Apple Container"
        }
      ]
    },
    "views": {
      "apple-container": [
        {
          "id": "apple-container.system",
          "name": "%system%",
          "icon": ""
        },
        {
          "id": "apple-container.images",
          "name": "%images%",
          "icon": "",
          "when": "apple-container.installed"
        },
        {
          "id": "apple-container.containers",
          "name": "%containers%",
          "icon": "",
          "when": "apple-container.installed"
        }
      ]
    }
  },
  "scripts": {
    "nls": "npx @vscode/l10n-dev export --outDir ./l10n ./src",
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "vscode:prepublish": "webpack --mode production --devtool hidden-source-map",
    "package": "npx @vscode/vsce package --pre-release --target darwin-arm64"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/vscode": "1.103",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild-loader": "4.3.0",
    "typescript": "5.9.2",
    "webpack": "5.101.3",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@vscode-elements/elements": "^2.3.1"
  }
}